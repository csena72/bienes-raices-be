extends ../layout/index

block contenido

    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="text" name="email")

                    div(class="flex items-center justify-between")
                        a(href="/auth/registro" class="text-gray-500 text-xs hover:text-gray-700") ¿No tienes cuenta? Crea una
                        a(href="/auth/login" class="text-gray-500 text-xs hover:text-gray-700") ¿Ya tienes cuenta? Inicia Sesión

                    input(type="submit" value="Enviar Instrucciones" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-md cursor-pointer py-3")
